{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 750,
  "height": 619,
  "projection": {
    "type": "mercator",
    "scale": 900,
    "center": [134, -28.25]
  },
  "config": {
    "background": "#F5F5F5",
    "view": { "stroke": null }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/main/data/ne_50m.json",
        "format": { "type": "topojson", "feature": "ne_50m_ocean" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue", "stroke": null }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/main/data/ne_50m.json",
        "format": { "type": "topojson", "feature": "ne_50m_admin_0_countries" }
      },
      "transform": [{ "filter": "datum.properties.NAME == 'Australia'" }],
      "mark": { "type": "geoshape", "fill": "#7cc48f", "stroke": "black" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/main/data/ne_50m.json",
        "format": { "type": "topojson", "feature": "ne_50m_admin_1_states_provinces" }
      },
      "transform": [{ "filter": "datum.properties.admin == 'Australia'" }],
      "mark": { "type": "geoshape", "fill": null, "stroke": "black" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/main/data/ne_50m.json",
        "format": { "type": "topojson", "feature": "ne_50m_graticules_5" }
      },
      "mark": { "type": "geoshape", "stroke": "#F5F5F5" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/main/data/fire_archive_M6_96619.csv"
      },
      "transform": [
        { "calculate": "toNumber(datum.longitude)", "as": "lonNum" },
        { "calculate": "toNumber(datum.latitude)", "as": "latNum" },
        { "calculate": "toNumber(datum.frp)", "as": "frpNum" },
        { "calculate": "toNumber(datum.scan)", "as": "scanNum" }
      ],
      "mark": { "type": "circle", "opacity": 0.7 },
      "encoding": {
        "longitude": { "field": "lonNum", "type": "quantitative" },
        "latitude":  { "field": "latNum", "type": "quantitative" },
        "size": {
          "field": "scanNum",
          "type": "quantitative",
          "title": "Scan Size",
          "scale": { "domain": [1, 3] }
        },
        "color": {
          "field": "frpNum",
          "type": "quantitative",
          "title": "Fire Radiative Power (MW)",
          "scale": { "domain": [100, 1000, 2000], "range": ["#FFA500", "#FF4500", "#8B0000"] }
        },
        "tooltip": [
          { "field": "acq_date", "type": "nominal", "title": "Date" },
          { "field": "frpNum", "type": "quantitative", "title": "FRP (MW)" },
          { "field": "scanNum", "type": "quantitative", "title": "Scan Size" },
          { "field": "brightness", "type": "quantitative", "title": "Brightness" }
        ]
      }
    }
  ]
}
